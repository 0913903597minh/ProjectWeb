@model List<ProjectWeb.Size>
@{
    Layout = null;
}
@if (Model.Count > 0)

{
    <label>Kích cỡ</label>
    <select class="form-control" name="sizeP">
        <option value="-1">Tất cả kích cỡ</option>
        <optgroup label="Nam">
            @foreach (var item in Model.Where(x => x.type == 1))
            {
                <option value="@item.size_id" @(item.size_id == ViewBag.selected ? "selected" : "")>VN : @item.VN - US : @item.US - UK : @item.UK</option>
            }
        </optgroup>
        <optgroup label="Nữ">
            @foreach (var item in Model.Where(x => x.type == 2))
            {
                <option value="@item.size_id" @(item.size_id == ViewBag.selected ? "selected" : "")>VN : @item.VN - US : @item.US - UK : @item.UK</option>
            }
        </optgroup>
    </select>

}


